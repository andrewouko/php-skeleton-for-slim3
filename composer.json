{
    "name": "opendoorafrica/php-skeleton-for-slim3",
    "description": "A Slim 3 Framework skeleton application for rapid REST API development and consumption.",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/andrewouko/php-skeleton-for-slim3",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Ouko",
            "email": "andrew@opendoorafrica.com",
            "homepage": "https://www.opendoorafrica.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "monolog/monolog": "^1.17",
        "slim/php-view": "^2.0",
        "slim/slim": "3.9.0",
        "vlucas/phpdotenv": "^4.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Provider\\": "provider/",
            "Services\\": "services/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
